{
    "name": "Java Development Environment",
    "image": "mcr.microsoft.com/devcontainers/java:17",
    "features": {
        "java": {
            "version": "17"
        }
    },
    "customizations": {
        "vscode": {
            "settings": {
                "java.configuration.runtimes": [
                    {
                        "name": "JavaSE-17",
                        "path": "/usr/lib/jvm/java-17-openjdk-amd64",
                        "default": true
                    }
                ]
            },
            "extensions": [
                "vscjava.vscode-java-pack",
                "redhat.java"
            ]
        }
    },
    "postCreateCommand": "java -version"
}